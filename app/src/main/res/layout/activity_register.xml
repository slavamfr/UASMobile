<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/abubg"
    tools:context=".RegisterActivity"
    android:gravity="center">

    <ImageView
        android:id="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_logohitam"
        android:padding="10dp" />

    <TextView
        android:id="@+id/title_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/logo"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/black"
        android:text="Register"
        android:textSize="24sp"
        android:layout_marginBottom="50dp"/>

    <LinearLayout
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/rounded_edittext"
        android:layout_below="@+id/title_register"
        style="@style/LayoutForm"
        android:paddingHorizontal="12dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_username"
            android:contentDescription="Username Icon" />

        <EditText
            android:id="@+id/etUsername"
            style="@style/EditText"
            android:hint="Username"
            android:inputType="text"
            android:background="@android:color/transparent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/rounded_edittext"
        android:layout_below="@+id/username"
        style="@style/LayoutForm"
        android:paddingHorizontal="12dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_email"
            android:contentDescription="Username Icon" />

        <EditText
            android:id="@+id/etEmail"
            style="@style/EditText"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:background="@android:color/transparent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/rounded_edittext"
        android:layout_below="@+id/email"
        style="@style/LayoutForm"
        android:paddingHorizontal="12dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_phone"
            android:contentDescription="Username Icon" />

        <EditText
            android:id="@+id/etPhone"
            style="@style/EditText"
            android:hint="Phone"
            android:inputType="number"
            android:background="@android:color/transparent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/password_layout"
        android:orientation="horizontal"
        android:background="@drawable/rounded_edittext"
        android:layout_below="@+id/phone"
        style="@style/LayoutForm"
        android:paddingHorizontal="12dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_password"
            android:contentDescription="Password Icon" />

        <EditText
            android:id="@+id/etPassword"
            style="@style/EditText"
            android:layout_weight="1"
            android:hint="Password"
            android:inputType="textPassword"
            android:background="@android:color/transparent" />

        <ImageView
            android:id="@+id/ivTogglePassword"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_visibility_off"
            android:contentDescription="Toggle Password Visibility" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/password_layout"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp"
        android:layout_marginStart="10dp" />

    <TextView
        android:id="@+id/txt_confirm"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/password_layout"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins"
        android:text="@string/TermsConditions"
        android:textSize="10sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnRegister"
        style="@style/RoundedButtonLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password_layout"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Register"
        android:textSize="14sp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/txt_haveAcc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnRegister"
        android:layout_marginStart="90dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins"
        android:text="Already Have an Account?"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/txt_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnRegister"
        android:layout_toEndOf="@+id/txt_haveAcc"
        android:layout_marginTop="8dp"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/poppins"
        android:text="Log In"
        android:textSize="11sp"
        android:textColor="@color/black"/>

</RelativeLayout>